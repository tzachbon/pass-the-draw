{
  "name": "pass-the-draw",
  "version": "1.0.0",
  "description": "Pass the draw game",
  "main": "index.js",
  "scripts": {
    "preinstall": "node scripts/forceYarn",
    "postinstall": "yarn npm-run-all postinstall:*",
    "postinstall:husky": "yarn husky install",
    "clean": "rimraf dist",
    "prebuild": "yarn clean",
    "build": "webpack --config webpack.prod.js",
    "start": "webpack serve --config webpack.dev.js",
    "serve": "serve ./dist",
    "lint": "eslint . -f codeframe",
    "lint:fix": "yarn lint --fix",
    "testCommit:unit": "yarn test:unit --lastCommit",
    "lintStaged": "yarn testCommit:unit && yarn lint:fix",
    "prettier": "prettier --write .  && yarn lint:fix",
    "pretest": "yarn lint && yarn build",
    "test": "yarn npm-run-all test:* --parallel",
    "test:typecheck": "tsc --noEmit",
    "test:unit": "(yarn is-ci && yarn jest --runInBand) || yarn jest",
    "test:e2e": "yarn jest --config ./jest.config-e2e.js"
  },
  "keywords": [],
  "author": "",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@stylable/runtime": "^4.3.3",
    "firebase": "^8.7.0",
    "react": "^17.0.2",
    "react-autocomplete": "^1.8.1",
    "react-canvas-draw": "^1.1.1",
    "react-dom": "^17.0.2",
    "react-firebase-hooks": "^3.0.4",
    "react-icons": "^4.2.0",
    "react-modal": "^3.14.3",
    "react-router-dom": "^5.2.0",
    "react-timer-hook": "^3.0.4",
    "react-use-localstorage": "^3.5.3",
    "uuid": "^8.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "yarn lintStaged"
  },
  "engines": {
    "npm": "please-use-yarn",
    "yarn": ">= 1.22.10"
  },
  "devDependencies": {
    "@stylable/core": "^4.3.3",
    "@stylable/dom-test-kit": "^4.3.3",
    "@stylable/jest": "^4.3.3",
    "@stylable/webpack-plugin": "^4.3.3",
    "@testing-library/dom": "^8.1.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^7.0.1",
    "@types/expect-puppeteer": "^4.4.5",
    "@types/jest": "^26.0.23",
    "@types/jest-environment-puppeteer": "^4.4.1",
    "@types/node": "^16.0.0",
    "@types/puppeteer": "^5.4.3",
    "@types/react": "^17.0.13",
    "@types/react-autocomplete": "^1.8.5",
    "@types/react-canvas-draw": "^1.1.0",
    "@types/react-dom": "^17.0.8",
    "@types/react-modal": "^3.12.0",
    "@types/react-router-dom": "^5.1.7",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "copy-webpack-plugin": "^9.0.1",
    "dotenv": "^10.0.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-spellcheck": "^0.0.19",
    "eslint-plugin-stylable": "^4.3.3",
    "firebase-tools": "^9.14.0",
