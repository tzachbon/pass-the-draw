    "prettier": "^2.3.2",
    "puppeteer": "^10.1.0",
    "react-test-renderer": "^17.0.2",
    "rimraf": "^3.0.2",
    "serve": "^12.0.0",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.5",
    "webpack": "^5.42.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "wix-eventually": "^2.3.0"
  }
